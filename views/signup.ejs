<%- include('partials/header') %>

<main class="access-point">

    <form action="/signup" method="post">

        <h2>Create an account</h2>

        <% if (error) {%> 
            <p class="error"><%= message %></p>
        <% } %>    

        <label for="">Full name</label>
        <input type="text" name="username" id="" value="<%= user.username %>" required>
        <label for="">Email</label>
        <input type="email" name="email" id="" value="<%= user.email %>" required>
        <label for="">Password</label>
        <input type="password" name="password" id="" value="<%= user.password %>" required minlength="8">
        <label for="">Confirm Password</label>
        <input type="password" name="confirm_password" id="" value="<%= user.confirm_password %>" required minlength="8">
        <input type="submit" value="Signup">
        <p>Have an account already? <a href="/login">Log In</a></p>
    </form>
</main>

<%- include('partials/footer') %>
<%- include('partials/header') %>
    <%- include('partials/nav') %>

    <main class="container">

        <h1>Welcome to the Dashboard, <%= locals.username %></h1>
    
        <!-- Upcoming Appointments -->
        <h2>Upcoming Appointments</h2>
        <% if (upcomingAppointments.length > 0) { %>
            <ul>
                <% upcomingAppointments.forEach(appointment => { %>
                    <li><%= appointment.pet_name %> - <%= appointment.appointment_date %> (<%= appointment.reason_for_visit %>)</li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>No upcoming appointments</p>
        <% } %>
        
        <!-- Appointment Statistics -->
        <h2>Appointment Statistics</h2>
        <p>Total Appointments: <%= totalAppointments %></p>
        <p>Appointments This Week: <%= currentWeekAppointments %></p>
        
        <!-- Quick Actions -->
        <h2>Quick Actions</h2>
        <ul>
            <li><a href="/appointment">Schedule New Appointment</a></li>
            <li><a href="/appointments">View All Appointments</a></li>
        </ul>

<%- include('partials/footer') %>